<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/regular_padding">
    <TextView
        android:id="@+id/v__forecasts_list_item_title__station"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/v__forecasts_list_item_title__favourite"
        android:textSize="@dimen/regular_font"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/v__forecasts_list_item_title__direction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/v__forecasts_list_item_title__station"/>
    <ImageView
        android:id="@+id/v__forecasts_list_item_title__favourite"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/favourite_button"
        android:background="@android:color/transparent"/>
</RelativeLayout>
