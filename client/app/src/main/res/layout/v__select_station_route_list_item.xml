<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/v__select_station_route_list_item__color"
        android:layout_width="15dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/v__select_station_route_list_item__number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/v__select_station_route_list_item__color"
        android:layout_centerVertical="true"
        android:padding="@dimen/regular_padding"
        android:textSize="@dimen/regular_font"/>
</RelativeLayout>
