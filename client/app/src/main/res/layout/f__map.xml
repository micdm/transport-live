<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/f__map__map_container"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/f__map__no_route_selected"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/f__map__no_route_selected"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/f__map__no_vehicles"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/f__map__no_vehicles"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/f__map__loading"
            style="@style/AppTheme.LoadingMessage"/>
    </FrameLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/f__map__select_route"
        android:text="@string/f__map__select_route"/>
</LinearLayout>
