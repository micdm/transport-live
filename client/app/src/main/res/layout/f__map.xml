<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/f__map__no_route_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:padding="@dimen/regular_padding"
        android:textSize="@dimen/regular_font"
        android:text="@string/f__map__no_route_selected"/>
    <TextView
        android:id="@+id/f__map__no_vehicles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:padding="@dimen/regular_padding"
        android:textSize="@dimen/regular_font"
        android:text="@string/f__map__no_vehicles"/>
    <RelativeLayout
        android:id="@+id/f__map__map_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageButton
            android:id="@+id/f__map__locate_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_location_found"
            android:layout_alignParentRight="true"
            android:layout_above="@+id/f__map__zoom_in"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:padding="5dp"
            android:background="@drawable/map_control_background"
            android:visibility="gone"/>
        <ImageButton
            android:id="@+id/f__map__zoom_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_zoom_in"
            android:layout_alignParentRight="true"
            android:layout_above="@+id/f__map__zoom_out"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:padding="5dp"
            android:background="@drawable/map_control_background"/>
        <ImageButton
            android:id="@+id/f__map__zoom_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_zoom_out"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:padding="5dp"
            android:background="@drawable/map_control_background"/>
    </RelativeLayout>
</RelativeLayout>
