<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/f__map__no_route_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:padding="@dimen/regular_padding"
        android:textSize="@dimen/regular_font"
        android:text="@string/f__map__no_route_selected"/>
    <TextView
        android:id="@+id/f__map__no_vehicles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:padding="@dimen/regular_padding"
        android:textSize="@dimen/regular_font"
        android:text="@string/f__map__no_vehicles"/>
</RelativeLayout>
